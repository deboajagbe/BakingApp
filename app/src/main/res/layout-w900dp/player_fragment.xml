<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/priLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unicornheight.bakingapp.modules.player.CakePlayer">


    <TextView
        android:id="@+id/full_detail"
        android:layout_width="1008dp"
        android:background="#00000000"
        android:gravity="center"
        tools:text="Hello World"
        android:layout_height="wrap_content" />


    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/full_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/image_temp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@+id/full_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />



</FrameLayout>
